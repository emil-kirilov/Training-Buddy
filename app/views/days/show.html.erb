<%= flash[:error] if flash[:error] %>
<%= flash[:notice] if flash[:notice] %>
<%= @day.inspect %>

<table>
	<tr>
		<th>food</th>
		<th>grams</th>
		<th colspan="3">Options</th>
	</tr>

	<tbody>
    <% if @meals.empty? %>
      <strong> No meals yet</strong>
    <% else %>
    	<% @meals.each do |meal| %>
    		<tr>
    			<td><%= meal.food_id %></td>
    			<td><%= meal.grams %></td>
                <td><%= link_to 'Show meal', meal_path(meal.id) %></td>
                <td><%= link_to 'Edit meal', edit_meal_path(meal.id) %></td>
                <td><%= link_to 'Delete meal', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    		</tr>
    	<% end %>
		<% end %>
	</tbody>
</table>

<%= link_to 'Add meal', new_day_meal_path(@day) %>
<%= link_to 'Back to Days', user_days_path(current_user) %>	